# Environment Configuration for Building Defect Detector

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
PORT=5000

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads

# Database Settings
DATABASE_URL=defect_analysis.db

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Security Settings
SECURE_FILENAME=true
CLEAN_UPLOADED_FILES=true

# Analytics Settings
MAX_ANALYSES_TO_DISPLAY=20
